{
  "manifest_version": 2,
  "name": "DTU Course Qualification",
  "description": "Shows courses the current course is a prerequisite for",
  "version": "1.0",
  "content_scripts": [
    {
      "js": ["js/jquery.js","contentscript.js"],
      "matches": ["http://kurser.dtu.dk/course/*", "https://kurser.dtu.dk/course/*"]
    }
  ],

  "web_accessible_resources": ["db/data.js","contentscript.js"],

  "background": {
    "scripts": ["js/jquery.js", "/db/data.js", "background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icons/icon_1.png"
  }
}
